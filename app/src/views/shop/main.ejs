<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= wholesale.name %>의 상품</title>
    <link rel="stylesheet" href="/css/shop/main.css">
    <script>
        const wholesale= {
                code: "<%= wholesale.code %>",
                name: "<%= wholesale.name %>"
        };
        const retail = {
            code: "<%= retail.code %>",
            name: "<%= retail.name %>"
        }
    </script>
</head>
<body>
    <div class="header">
        <div class="logo-section">
            <div class="logo">logo</div>
            <div class="logo">logo</div>
        </div>
        <h1><%= wholesale.name %></h1>
        <div class="user-info">
            <p><%= retail.name %></p>
        </div>
    </div>

    <div class="content">
        <div class="product-list">
            <% if (!prod.success) { %>
                <p class="error-msg"><%= prod.msg %></p>
            <% } else if (prod.prods.length === 0) { %>
                <p>등록된 상품이 없습니다.</p>
            <% } else { %>
                <table class="prod-table">
                    <thead>
                        <tr>
                            <th>상품코드</th>
                            <th>상품명</th>
                            <th>단가</th>
                            <th>최소주문수량</th>
                            <th>단위주문수량</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% prod.prods.forEach(function(product) { %>
                            <tr>
                                <td><%= product.id %></td>
                                <td><%= product.name %></td>
                                <td><%= product.price.toLocaleString() %>원</td>
                                <td><%= product.minCnt %></td>
                                <td><%= product.unitCnt %></td>
                            </tr>
                            <% if (product.opt.length > 0) { %>
                                <tr class="option-row">
                                    <td colspan="5">
                                        <div class="option-details">
                                            <% product.opt.forEach(function(option) { %>
                                                <div class="option-group">
                                                    <label><%= option.optName %></label>
                                                    <div>
                                                        <% option.opt.forEach(function(optItem) { %>
                                                            <label>
                                                                <input type="checkbox" value="<%= optItem.nm %>" data-add="<%= optItem.ad %>">
                                                                <%= optItem.nm %> (+<%= optItem.ad %>원)
                                                            </label>
                                                        <% }); %>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                            <tr class="action-row">
                                <td colspan="3"></td>
                                <td> <input type="number" name="quantity" min="<%= product.minCnt %>" value="<%= product.minCnt %>" step="<%= product.unitCnt %>"> </td>
                                <td> <button class="cart-btn">장바구니</button> </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
        <div class="sidebar">
            <div class="user-profile">
                <% if (retail && retail.id !== 'none') { %>
                    <p><%= retail.name %></p>
                    <button onclick="window.location.href='/retail/logout'">로그아웃</button>
                <% } else { %>
                    <button onclick="window.location.href='/retail/login'">로그인하기</button>
                <% } %>
            </div>
            <div class="cart-section">
                <h2>장바구니</h2>
                <div class="cart-items">
                </div>
                <button id="orderButton" class="order-btn">주문하기</button>
            </div>
        </div>
    </div>

    <footer>
        <p>Aldebaran</p>
    </footer>
    <script src="/js/shop/main.js"></script>
</body>
</html>