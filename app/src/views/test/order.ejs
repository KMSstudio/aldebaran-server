<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Push Test Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
        }

        button:hover {
            background-color: #45a049;
        }

        #result {
            margin-top: 20px;
            white-space: pre-wrap;
            background-color: #e7e7e7;
            padding: 10px;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Order Push Test</h2>
        <div class="form-group">
            <label for="wholesaleId">Wholesale ID:</label>
            <input type="text" id="wholesaleId" required>
        </div>
        <div class="form-group">
            <label for="wholesaleName">Wholesale Name:</label>
            <input type="text" id="wholesaleName" required>
        </div>
        <div class="form-group">
            <label for="retailId">Retail ID:</label>
            <input type="text" id="retailId" required>
        </div>
        <div class="form-group">
            <label for="retailName">Retail Name:</label>
            <input type="text" id="retailName" required>
        </div>
        <button id="pushOrderButton">Push Order</button>

        <div id="result"></div>
    </div>

    <script>
        document.getElementById('pushOrderButton').addEventListener('click', async function() {
            const wholesaleId = document.getElementById('wholesaleId').value;
            const wholesaleName = document.getElementById('wholesaleName').value;
            const retailId = document.getElementById('retailId').value;
            const retailName = document.getElementById('retailName').value;

            // Order items are now fixed
            const order = {};
            order.content = [
                { code: "GV293", name: "상추", cnt: 2 },
                { code: "GV295", name: "고추", cnt: 1, opt: ["특"] }
            ];
            order.price = 23000;

            const orderData = {
                wholesale: { code: wholesaleId, name: wholesaleName },
                retail: { code: retailId, name: retailName },
                order,
            };

            try {
                const response = await fetch('/order/push', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(orderData)
                });

                const result = await response.json();
                document.getElementById('result').textContent = JSON.stringify(result, null, 2);
            } catch (error) {
                document.getElementById('result').textContent = 'Error: ' + error.message;
            }
        });
    </script>
</body>
</html>
