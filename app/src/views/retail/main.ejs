<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Retail Main Page</title>
    <link rel="stylesheet" href="/css/retail/main.css">
</head>
<body>
    <div class="header">
        <div class="logo-section">
            <div class="logo">logo</div>
            <div class="logo">logo</div>
        </div>
        <div class="user-info">
            <span><%= retail.id %></span>
        </div>
    </div>

    <div class="container">
        <div class="content">
            <div class="order-info">
                <h2>주문안내</h2>
                <% if (!order.success) { %>
                    <p><%= order.msg %></p>
                <% } else if (order.orders.length === 0) { %>
                    <p>접수된 주문이 아직 없습니다.</p>
                <% } else { %>
                    <p class="order-count">(<%= order.orders.length %>)</p>
                    <table class="order-table">
                        <thead>
                            <tr>
                                <th>도매상</th>
                                <th>상품</th>
                                <th>금액</th>
                                <th>날짜</th>
                                <th>상태</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.orders.forEach(function(o) { %>
                                <tr>
                                    <td><%= o.wholesale %></td>
                                    <td><%= o.product.join(", ") %></td>
                                    <td><%= o.price.toLocaleString() %></td>
                                    <td><%= o.date %></td>
                                    <td><%= o.status %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>

        <aside class="sidebar">
            <div class="user-profile">
                <h2><%= retail.name %></h2>
                <button onclick="window.location.href='/retail/info'">정보</button>
                <button onclick="window.location.href='/logout'">로그아웃</button>
            </div>
            <div class="recent-access">
                <h3>최근접속</h3>
                <% if (conn && conn.length > 0) { %>
                    <% conn.forEach(function(shop) { %>
                        <p><a href="/shop/<%= shop.xcode %>"><%= shop.name %></a></p>
                    <% }) %>
                <% } else { %>
                    <p>접속 기록이 없습니다.</p>
                <% } %>
            </div>
        </aside>
    </div>

    <footer class="footer">
        <p>Aldebaran</p>
    </footer>
</body>
</html>
